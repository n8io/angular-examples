extends ../../_layouts/master

append header-meta
  base(href='/')
  
append header-title
  | Angular Examples : Directives

append header-stylesheets
  link(href='#{locals.baseUrl?baseUrl:""}/statics/bower_components/prism/themes/prism.css', rel='stylesheet', id='css-prism')

append body-title
  +body-title('Angular directives', 'At a high level, directives are markers on a DOM element (such as an attribute, element name, comment or CSS class) that tell AngularJS\'s HTML compiler ($compile) to attach a specified behavior to that DOM element or even transform the DOM element and its children.')

append body-content
  .row
    .col-md-12
      a(href='#{locals.baseUrl?baseUrl:""}/examples/snippets/ng-directive.html?noc=#{cacheKey}', target='_self') Live demo
    .col-md-12
      pre#html(data-src='#{locals.baseUrl?baseUrl:""}/examples/snippets/ng-directive.html?noc=#{cacheKey}').language-markup
append body-scripts
  script(src='#{locals.baseUrl?baseUrl:""}/statics/bower_components/prism/prism.js')